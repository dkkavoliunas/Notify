<Window x:Class="Notify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Notify" Height="130" Width="365" 
        StateChanged="MainWindow_OnStateChanged"
        ResizeMode="CanMinimize"
        Closed="MainWindow_OnClosed"
        KeyDown="MainWindow_OnKeyDown">
    <Grid Margin="0,0,0.2,0.2">
        <Button x:Name="StartButton" Content="Start" IsEnabled="False" HorizontalAlignment="Left" Height="40" Margin="170,30,0,0" VerticalAlignment="Top" Width="70" Click="StartButton_Click" />
        <Button x:Name="StopButton" Content="Stop" IsEnabled="False" HorizontalAlignment="Left" Height="40" Margin="260,30,0,0" VerticalAlignment="Top" Width="70" Click="StopButton_Click"/>
        <Label x:Name="TimeLabel" FontSize="40" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="7,15,0,0" VerticalAlignment="Top" Height="70" Width="130"/>
    </Grid>
</Window>
